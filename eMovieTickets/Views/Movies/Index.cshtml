@model IEnumerable<Movie>
@{
	ViewData["Title"] = "List of Movies";
}

<div class="row">
	@foreach(var item in Model)
	{
        <div class="col-md-4 col-xs-6">
        <div class="card mb-3 m-1" style="max-width: 450px;">
                <h5 class="card-header text-white bg-info">@item.Name<a class="text-white float-right"><i class="bi bi-pencil-square"></i></a></h5>
               
            <div class="row no-gutters">
                <div class="col-md-6">
                    <img src="@item.ImageURL" class="card-img" alt="@item.Name" width="100%">
                </div>
                <div class="col-md-6">
                   
                    <div class="card-body">
                         <p class="card-text"><b>Description:</b>@item.Description</p>
                            <p class="card-text"><b>Price:</b>@item.Price</p>
                            <p class="card-text"><b>Start Date:</b>@item.StartDate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date:</b>@item.EndDate.ToString("dd MMM yy")</p>
                        <p class="card-text"><small class="text-muted"><b>Category:</b>@item.MovieCategory</small></p>
                            <p class="card-text"><b>Status:</b>
                                @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                } else if(DateTime.Now>item.EndDate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                    </div>
                </div>
            </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-success text-white"><i class="bi bi-cart"></i>Add to Cart(Price:@item.Price.ToString("c"))</a>
                    <a class="btn btn-outline-primary float-right text-info"><i class="bi bi-eye"></i>View Details</a>
            </div>
        </div>
        </div>
	}
</div>
